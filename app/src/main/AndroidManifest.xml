<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cf.parks.a1note">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ViewNoteActivity" />
        <activity android:name=".activities.NewNoteActivity" />
        <activity android:name=".activities.SetPasswordActivity" />
        <activity android:name=".activities.AboutUsActivity" />
        <activity android:name=".activities.AskPasswordActivity" />
    </application>

</manifest>